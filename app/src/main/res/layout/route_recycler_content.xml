<android.support.v7.widget.CardView
    android:id="@+id/route_card_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <GridLayout
        android:id="@+id/route_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="19"
        android:rowCount="2"
        android:background="@color/background_floating_material_dark"
        android:padding="5dp"
        android:outlineProvider="paddedBounds"
        android:orientation="vertical"
        android:layoutMode="clipBounds">

       <!-- <ImageView
            android:id="@+id/route_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/route_image_desc"
            android:layout_row="0"
            android:layout_column="0" />-->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spacer1"
            android:layout_row="0"
            android:layout_column="1"
            android:inputType="none"
            android:layout_columnSpan="4" />

        <TextView android:id="@+id/manouvers"
            android:text="@string/app_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_column="6"
            android:layout_row="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spacer_text"
            android:layout_row="0"
            android:layout_column="17"
            android:inputType="none" />

        <TextView android:id="@+id/direction_text"
            android:text="@string/app_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="18"
            android:layout_row="0"
            android:textColor="@color/abc_primary_text_material_dark" />
    </GridLayout>
</android.support.v7.widget.CardView>